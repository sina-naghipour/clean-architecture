        elif self.__is_advantage():
            if self.player1.score > self.player2.score:
                return f"Advantage {self.player1.name}"
            else:
                return f"Advantage {self.player2.name}"







    def score(self):
        if self.__is_win():
            return f"Win for {self.__leading_player().name}"

        elif self.__is_advantage():
            return f"Advantage {self.__leading_player().name}"

        elif self.__is_tied():
            if self.player1.score < 3:
                idiom_player_1 = self.__translate_score_to_idiom(self.player1)
                return f"{idiom_player_1}-All"
            else:
                return "Deuce"

        elif self.player1.score <= 3 and self.player2.score <= 3:
            idiom_player_1 = self.__translate_score_to_idiom(self.player1)
            idiom_player_2 = self.__translate_score_to_idiom(self.player2)

            return f"{idiom_player_1}-{idiom_player_2}"





def score(self):
    if self.__is_win():
        return f"Win for {self.__leading_player().name}"
    if self.__is_advantage():
        return f"Advantage {self.__leading_player().name}"
    if self.__is_tied():
        return self.__score_tied()
    return self.__score_normal()

def __leading_player(self) -> Player:
    return self.player1 if self.player1.score > self.player2.score else self.player2

def __score_tied(self):
    return f"{self.__translate_score_to_idiom(self.player1)}-All" if self.player1.score < 3 else "Deuce"

def __score_normal(self):
    return f"{self.__translate_score_to_idiom(self.player1)}-{self.__translate_score_to_idiom(self.player2)}"



def __translate_idiom_to_score(self, idiom: str) -> int:
    if idiom in self.SCORE_MAP:
        return self.SCORE_MAP[idiom]
    raise ValueError(f"Invalid idiom: {idiom}")
